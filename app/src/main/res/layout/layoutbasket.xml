<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageBasket"
                    android:src="@drawable/error"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:ellipsize="end"
                    android:lines="2"
                    android:id="@+id/textTitleBasket"
                    android:text="گوشی آیفون"
                    android:textSize="13sp"
                    android:textColor="@color/blackllight"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textColorBasket"
                    android:text="رنگ قرمز"
                    android:textSize="12sp"
                    android:textColor="@color/blackllight"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textGarantyBasket"
                    android:text="گارانتی دو ساله آوا"
                    android:textSize="12sp"
                    android:textColor="@color/blackllight"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textNumberBasket"
                    android:text="2"
                    android:textSize="13sp"
                    android:textColor="@color/blackllight"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            
        </LinearLayout>

        <LinearLayout
            android:background="#e1e1e1"
            android:orientation="horizontal"
            android:layout_weight="0.20"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginRight="5dp"
                android:textColor="@color/blackllight"
                android:text="قیمت محصول :"
                android:gravity="center_vertical|right"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/priceBasket"
                android:layout_marginRight="5dp"
                android:textColor="@color/red"
                android:text="32132132"
                android:gravity="center_vertical|right"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View

            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:background="#e1e1e1"
            android:orientation="horizontal"
            android:layout_weight="0.20"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginRight="5dp"
                android:textColor="@color/blackllight"
                android:text="قیمت کل محصول :"
                android:gravity="center_vertical|right"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textAllpriceBasket"
                android:layout_marginRight="5dp"
                android:textColor="@color/green"
                android:text="32132132"
                android:gravity="center_vertical|right"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View

            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
           android:layout_marginBottom="1dp"
            android:id="@+id/textDeleteBasket"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:gravity="center_vertical|left"
            android:text="حذف"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>